@model SomarthokBangla.Models.Products
@{
    ViewData["Title"] = "Product Details";
}

<br />

<h2 class="text-info">Product Details</h2>

<form asp-action="Details" method="post" enctype="multipart/form-data">

    <div class="p-4 rounded border">

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="col-sm-8">

            <div class="form-group row">
                <h3>@ViewBag.message</h3>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="Price" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="Image" class="form-control" type="file" accept="image/x-png,image/jpeg,image/webp" />
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="DetailsHtmlLink"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="DetailsHtmlLink" class="form-control" type="file" accept="file_extension/html" />
                </div>
                <span asp-validation-for="DetailsHtmlLink" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label>Special Tag</label>

                </div>
                <div class="col-sm-5">
                    <input id="SpecialTagId" value="@Model.ProductTypes.ProductCategory.SpecialTag.TagName" readonly="readonly" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label>Product Category</label>
                </div>
                <div class="col-sm-5">
                    <input id="ProductCategoryId" value="@Model.ProductTypes.ProductCategory.CategoryName" readonly="readonly" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-sm-5">
                    <input value="@Model.ProductTypes.ProductType" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="ManufacturerId"></label>
                </div>
                <div class="col-sm-5">
                    <input value="@Model.Manufacturer.ManufacturerName" readonly="readonly" class="form-control" />

                </div>
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="UplodaDate"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="UplodaDate" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="UplodaDate" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="ModelNo"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="ModelNo" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ModelNo" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="IsAvailable" disabled="disabled" type="checkbox" class="checkbox" />
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
                <a asp-action="Index" class="btn btn-success">Back To List</a>
            </div>

        </div>
        <div class="col-sm-1">

        </div>

        <div class="col-sm-3">

            <img src="~/@Model.Image" width="100%" />

        </div>      

    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

