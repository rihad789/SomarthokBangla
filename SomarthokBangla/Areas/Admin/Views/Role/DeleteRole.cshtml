@{
    ViewData["Title"] = "Delete Role";
}

<br />

<h2 class="text-info">Delete Role</h2>
<br />

<form asp-action="DeleteRole" id="role_form" method="post" enctype="multipart/form-data">

    <div class="p-4 rounded border">

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <input type="hidden" value="@ViewBag.id" name="id" />

        <div class="form-group row">
            <h3>Do you want to delete this role?</h3>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label>Role Name</label>
            </div>
            <div class="col-sm-4">
                <input id="name" name="name" disabled="disabled" value="@ViewBag.name" class="form-control" />
            </div>
            <span id="name"></span>
        </div>

        <div class="form-group row text-right">
            <div class="col-sm-2">

            </div>
            <div class="col-sm-4">
                <input type="submit" class="btn btn-primary" value="Delete" />
                <a asp-action="Manage" class="btn btn-success">Back To List</a>
            </div>



        </div>
    </div>

</form>

