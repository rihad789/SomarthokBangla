@model SomarthokBangla.Areas.Admin.Model.RoleUserViewModel
@{
    ViewData["Title"] = "Assign Role";
}

<br />

<h2 class="text-info">Assign Role</h2>
<br />

<form asp-action="AssignUserRole" method="post" enctype="multipart/form-data">

    <div class="p-4 rounded border">

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>


        <div class="form-group row">
            <h3>@ViewBag.message</h3>
            <h3>@ViewBag.msg</h3>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="UserId"></label>
            </div>
            <div class="col-sm-5">
                @* <input asp-for="ProductTypeId" class="form-control" />*@
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="RoleId"></label>
            </div>
            <div class="col-sm-5">
                @*<input asp-for="SpecialTagId" class="form-control" />*@
                <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>
            </div>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Assign" />
            <a asp-action="Manage" class="btn btn-success">Back To List</a>
        </div>

    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



