
@{
    ViewData["Title"] = "Index";
}

<br /><br />

<div class="row">

    <div class="col-sm-6">
        <h2 class="text-info">Role List</h2>
    </div>
    <div class="col-sm-6 text-right">
        <a asp-action="CreateRole" class="btn btn-info">&nbsp;<span class="fa fa-plus"></span> New Role</a>
    </div>

</div>

<br />

<div>

    <table class="table table-striped" id="myTable">

        <thead>
            <tr class="table-info">
                <th>Role Name</th>
                <th></th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in ViewBag.Roles)
            {
                <tr>
                    <td>@item.Name</td>
                    <td style="width:200px">
                        <div class="btn-group">
                            <a asp-action="EditRole" class="btn btn-primary" asp-route-id="@item.Id">
                                <span class="fa fa-edit"></span>
                            </a>
                            <a asp-action="DeleteRole" class="btn btn-danger" asp-route-id="@item.Id">
                                <span class="fa fa-trash-alt"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script src="~/alertify/alertify.min.js"></script>
    <script type="text/javascript">
        $(function() {
            var create = '@TempData["create"]'
            if (create != '') {
                alertify.success(create);
            }

            var update = '@TempData["update"]'
            if (update != '') {
                alertify.success(update);
            }
        })
    </script>
}

