@{
    ViewData["Title"] = "Create New Role";
}

<br />

<h2 class="text-info">Add New Role</h2>
<br />

<form asp-action="CreateRole" id="role_form" method="post" enctype="multipart/form-data">

    <div class="p-4 rounded border">

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="form-group row">
            <h3>@ViewBag.mgs</h3>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label>Role Name</label>
            </div>
            <div class="col-sm-4">
                <input id="name" name="name" value="@ViewBag.name" class="form-control" />
            </div>
            <span id="name"></span>
        </div>

        <div class="form-group row text-right">
            <div class="col-sm-2">

            </div>
            <div class="col-sm-4">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a asp-action="Manage" class="btn btn-success">Back To List</a>
            </div>



        </div>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

    $(document).ready(function () {

        $("#role_form").validate({
            rules: {
                name: {
                    required: true,
                    minlength: 3
                }
            },
            messages: {
                name: "Role Name is Required",

            }
        });

    });

    </script>
}

